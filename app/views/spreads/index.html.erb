<p id="notice"><%= notice %></p>

<h1>Listing Spreads</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tradition</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @spreads.each do |spread| %>
      <tr>
        <td><%= link_to spread.name, spread %></td>
        <td><%= spread.tradition.try(:name) %></td>
        <td><%= spread.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Spread', new_spread_path %>
