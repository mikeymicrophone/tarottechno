<% @readers.each do |reader| %>
  <%= div_for reader do %>
    <%= reader.name %>
    <% if reader.active? %>
      <%= link_to 'deactivate', deactivate_reader_path(reader), :method => :put %>
    <% else %>
      <%= link_to 'activate', activate_reader_path(reader), :method => :put %>
    <% end %>
  <% end %>
<% end %>

<%= link_to 'name a reader', new_reader_path %>
