var interpretation_form = '<%= escape_javascript appearance_interpretation_form @appearance %>';
<% if @appearance.position %>
  $('#<%= dom_id(@appearance.position, :appearance_in) %>').replaceWith('<%= @appearance.card.name + (@appearance.reversed ? ' (reversed)' : '') %>' + interpretation_form);
<% else %>
  $('#<%= dom_id(@appearance.reading, :cards_appearing_in) %>').append('<%= @appearance.card.name + (@appearance.reversed ? ' (reversed)' : '') %>' + interpretation_form);
<% end %>
