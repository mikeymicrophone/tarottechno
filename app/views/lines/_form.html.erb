<%= form_for(line) do |f| %>
  <% if line.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(line.errors.count, "error") %> prohibited this line from being saved:</h2>

      <ul>
      <% line.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :event_id %>
    <%= f.select :event_id, options_from_collection_for_select(Event.all, :id, :name, line.event_id), :include_blank => true %>
  </div>

  <div class="field">
    <%= f.label :reader_id %>
    <%= f.select :reader_id, options_from_collection_for_select(Reader.all, :id, :moniker_or_name, line.reader_id), :include_blank => true %>
  </div>
  
  <div class="field">
    <%= f.label :position_in_room %>
    <%= f.text_field :position_in_room, :width => 200 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
