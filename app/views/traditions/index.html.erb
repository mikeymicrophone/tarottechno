<h1>a List of Traditions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @traditions.each do |tradition| %>
      <tr>
        <td><%= tradition.name %></td>
        <td><%= plural_nest tradition, 'deck' %></td>
        <td><%= plural_nest tradition, 'card' %></td>
        <td><%= plural_nest tradition, 'suit' %></td>
        <td><%= plural_nest tradition, 'interpretation' %></td>
        <td><%= link_to 'inspect->/', tradition %></td>
        <td><%= link_to 'interfere', edit_tradition_path(tradition) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

