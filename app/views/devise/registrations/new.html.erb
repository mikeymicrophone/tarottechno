<h2>Sign up</h2>
<!-- <div class="fb-login-button" data-max-rows="1" data-size="medium" data-show-faces="false" data-auto-logout-link="false"></div> -->

<%= link_to "Sign up with Facebook", querent_facebook_omniauth_authorize_path if resource_name == :querent %>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, :autofocus => true, :width => 300 %>
  </div>
  
  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, :width => 300 %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, :width => 300 %>
  </div>
  
  <div class="field">
    <%= f.label :moniker %><br>
    <%= f.text_field :moniker, :width => 300 %>
  </div>
  
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, :width => 300 %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, :autocomplete => "off", :width => 300 %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, :autocomplete => "off", :width => 300 %>
  </div>
  
  <div class="field">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
  </div>
  
  <div class="field">
    <%= f.check_box :sign_mailing_list, :value => true %>
    <%= f.label :sign_mailing_list %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
