

<h1>a List of Cards</h1>

<table>
  <thead>
    <tr>
      <th>Deck</th>
      <th>Name</th>
      <th>Suit</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.deck.name %></td>
        <td><%= card.name %></td>
        <td><%= card.suit.name %></td>
        <td><%= card.order %></td>
        <td><%= link_to 'inspect->/', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

